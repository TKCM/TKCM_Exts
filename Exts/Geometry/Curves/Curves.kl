//  hasEmptyCurve ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
//  各カーブが正常か（長さがあるか）をチェック
function Boolean Curves.hasEmptyCurve?(String functionName){
  Boolean have;
  Integer check;
  for(Integer i=0; i<this.curveCount(); i++){
    if(this.getCurve(i).getLength() == 0.0){
      report("!!!!!!Error!!!!!! "+functionName+" : curve index '"+i+"'' is empty curve");
      check += 1;
    }
  }
  if(check > 0){
    have = true;
  } 
  
  return have;  
}
